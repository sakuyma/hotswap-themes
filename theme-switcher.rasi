/**
 * Rofi WiFi Menu - Minimal Catppuccin
 */
@import "theme.rasi"

configuration {
    show-icons: false;
    disable-history: false;
    sidebar-mode: false;
    lines: 8;
    width: 20ch;
    fixed-height: false;
    eh: 1;
}

window {
    background-color: @bg;
    border-color: @fg;
    border: 2px;
    border-radius: 16px;
    padding: 8px;
}
inputbar {
    children: [prompt, entry];
    background-color: @bg;
    border-radius: 6px;
    padding: 8px 10px;
    margin: 0px 0px 8px 0px;
    border: 0px;
}

separator {
    color: transparent;
    width: 0px;
}

divider {
    color: transparent;
    width: 0px;
}

prompt {
    background-color: @bg;
    text-color: @fg;
    font: "JetBrains Mono 14";
    margin: 0px 4px 0px 0px;
}

entry {
    background-color: @bg;
    font: "JetBrains Mono 14";
    placeholder: " ";
    placeholder-color: @fg;
}
border {
    enabled: false;
}

listview {
    background-color: @bg;
    spacing: 3px;
    scrollbar: false;
}

element {
    background-color: @bg;
    text-color: @fg;
    padding: 0px 0px;
    margin: 1px 0px;
}

element selected.normal {
    background-color: @fg;
    text-color: @bg;
    border-color: @fg;
    border-radius: 8px;
}

element selected.urgent {
    background-color: @fg;
    text-color: @bg;
    border-color: @fg;
}

element selected.active {
    background-color: @fg;
    text-color: @bg;
    border-color: @fg;
}

element-text {
    background-color: @bg;
    text-color: @fg;
    font: "JetBrains Mono 14";
    vertical-align: 0.5;
    padding: 0px 6px;
}

element-text selected {
    background-color: transparent;
    text-color: inherit;
    padding: 8px 12px;
}

element-icon {
    background-color: transparent;
    text-color: inherit;
}

message {
    background-color: @bg;
    padding: 0px;
    border: 0px;
    text-color: @fg;
    font: "JetBrains Mono 12";
}
